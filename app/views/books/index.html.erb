<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? && @book.errors.count == 1 %>
